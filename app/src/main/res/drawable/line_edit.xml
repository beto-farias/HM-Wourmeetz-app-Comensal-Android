<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

    <!-- main color -->
    <item>
        <shape>
            <stroke android:width="1.0dip" android:color="@color/colorGreenTrans" />
